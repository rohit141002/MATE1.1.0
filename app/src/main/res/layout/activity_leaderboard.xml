<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Leaderboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_black"
                android:padding="25dp"
                android:text="Leaderboard"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/firstTeam_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="100dp"
                android:padding="15dp"
                android:text="Team A"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_Score"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="4dp"></TextView>

            <TextView
                android:id="@+id/firstTeam_Score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="50dp"
                android:padding="15dp"
                android:text="Nil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/firstTeam_name"
                tools:layout_editor_absoluteY="4dp">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/secondTeam_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="100dp"
                android:padding="15dp"
                android:text="Team B"
                app:layout_constraintEnd_toStartOf="@+id/secondTeam_Score"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="4dp"></TextView>

            <TextView
                android:id="@+id/secondTeam_Score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="50dp"
                android:padding="15dp"
                android:text="Nil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/secondTeam_name"
                tools:layout_editor_absoluteY="4dp">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/thirdTeam_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="100dp"
                android:padding="15dp"
                android:text="Team C"
                app:layout_constraintEnd_toStartOf="@+id/thirdTeam_Score"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="4dp"></TextView>

            <TextView
                android:id="@+id/thirdTeam_Score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="50dp"
                android:padding="15dp"
                android:text="Nil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/thirdTeam_name"
                tools:layout_editor_absoluteY="4dp">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fourthTeam_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="100dp"
                android:padding="15dp"
                android:text="Team D"
                app:layout_constraintEnd_toStartOf="@+id/fourthTeam_Score"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="4dp"></TextView>

            <TextView
                android:id="@+id/fourthTeam_Score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="50dp"
                android:padding="15dp"
                android:text="Nil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fourthTeam_name"
                tools:layout_editor_absoluteY="4dp">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="40dp">


            <EditText
                android:id="@+id/firstTeam_reqName"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:hint="Team  A"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_NameSetButton"
                app:layout_constraintStart_toStartOf="parent"></EditText>


            <Button
                android:id="@+id/firstTeam_NameSetButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:textSize="10dp"
                android:text="Set Name"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="-3dp"></Button>

            <EditText
                android:id="@+id/firstTeam_updatedData"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Score"
                android:inputType="number"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_updateButton"
                app:layout_constraintStart_toEndOf="@+id/firstTeam_NameSetButton"
                tools:layout_editor_absoluteY="-1dp"></EditText>

            <Button
                android:id="@+id/firstTeam_updateButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="Update"
                android:textSize="10dp"

                tools:layout_editor_absoluteX="322dp"
                tools:layout_editor_absoluteY="-3dp"></Button>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="40dp">


            <EditText
                android:id="@+id/secondTeam_reqName"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:hint="Team B"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_NameSetButton"
                app:layout_constraintStart_toStartOf="parent"></EditText>


            <Button
                android:id="@+id/secondTeam_NameSetButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="Set Name"
                android:textSize="10dp"

                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="-3dp"></Button>

            <EditText
                android:id="@+id/secondTeam_updatedData"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Score"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_updateButton"
                app:layout_constraintStart_toEndOf="@+id/firstTeam_NameSetButton"
                tools:layout_editor_absoluteY="-1dp"></EditText>

            <Button
                android:id="@+id/secondTeam_updateButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Update"
                android:textSize="10dp"

                tools:layout_editor_absoluteX="322dp"
                tools:layout_editor_absoluteY="-3dp"></Button>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="40dp">


            <EditText
                android:id="@+id/thirdTeam_reqName"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:hint="Team C"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_NameSetButton"
                app:layout_constraintStart_toStartOf="parent"></EditText>


            <Button
                android:id="@+id/thirdTeam_NameSetButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="Set Name"
                android:textSize="10dp"

                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="-3dp"></Button>

            <EditText
                android:id="@+id/thirdTeam_updatedData"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Score"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_updateButton"
                app:layout_constraintStart_toEndOf="@+id/firstTeam_NameSetButton"
                tools:layout_editor_absoluteY="-1dp"></EditText>

            <Button
                android:id="@+id/thirdTeam_updateButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Update"
                android:textSize="10dp"
                tools:layout_editor_absoluteX="322dp"
                tools:layout_editor_absoluteY="-3dp"></Button>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="40dp">


            <EditText
                android:id="@+id/fourthTeam_reqName"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:hint="Team D"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_NameSetButton"
                app:layout_constraintStart_toStartOf="parent"></EditText>


            <Button
                android:id="@+id/fourthTeam_NameSetButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="Set Name"
                android:textSize="10dp"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="-3dp"></Button>

            <EditText
                android:id="@+id/fourthTeam_updatedData"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Score"

                android:paddingLeft="10dp"
                app:layout_constraintEnd_toStartOf="@+id/firstTeam_updateButton"
                app:layout_constraintStart_toEndOf="@+id/firstTeam_NameSetButton"
                tools:layout_editor_absoluteY="-1dp"></EditText>

            <Button
                android:id="@+id/fourthTeam_updateButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:textSize="10dp"

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Update"
                tools:layout_editor_absoluteX="322dp"
                tools:layout_editor_absoluteY="-3dp"></Button>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <Button
                android:id="@+id/signout"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:text="Sign OUt"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>